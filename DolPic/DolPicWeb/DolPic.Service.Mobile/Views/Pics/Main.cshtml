@{
    var list = ViewBag.DataList;
}
@using DolPic.Common

<style media="screen,projection" type="text/css">
    #loading {
        text-align: center;
        color: #67a;
        position: absolute;
        left: 300px;
        top: 300px;
    }
</style>

@Html.Partial("_TopBar")
@Html.Action("FavoriteBar", "Pics")
<!-- 구글 광고 -->
@Html.Partial("_GoogleAdTop")
<div id="loading" style="display:none"><img src="/Images/loader.gif" /><br /><br />로딩하는 중입니다...</div>
<!-- 갤러리 -->
<div class="wrapper">
	<div class="gbox_gallery">
        <div class="img_list">
            <!-- 갤러리 리스트 -->
            @foreach (var item in list)
            {
                var sImgSrc = "";

                if (item.TagUrlType == (int)e_TagUrlType.twitter)
                {
                    sImgSrc = item.ImageSrc + ":thumb";
                }
                else if (item.TagUrlType == (int)e_TagUrlType.instagram)
                {
                    sImgSrc = item.ImageSrc;
                }
                <div seq="@item.Seq" class="gbox" style="background:url(@sImgSrc) center center no-repeat;background-size:cover"></div>
            }
        </div>
            <div class="clear"></div>
            <ul class="gbox_list">
                <div class="goto_list">
                    @Html.Raw(ViewBag.PageGotoList)
                </div>
            </ul>
            <div class="clear"></div>
        </div>
    <center><a href="https://play.google.com/store/apps/details?id=com.tony.mocadev.dolpicapp" target="_blank"><img src="/images/banner_640_150923.jpg" width="300"></a></center>
	<div class="gbox_side">
        @Html.Action("HotDolPicList", "Pics")
		<!-- 구글 광고 -->
		@Html.Partial("_GoogleAd2")
		<!-- 공지사항 -->
		@Html.Partial("_Notice")
	</div>
	<div class="clear"></div>
</div>
<input type="hidden" id="CurPage" value="@ViewBag.CurPage" />
@Html.Action("InitialList", "Pics")

<script>
$(document).ready(function() {
	var gboxDefault = ($('.gbox_gallery').width() - 24) / 3;
	var gboxWide = ($('.gbox_gallery').width() - 40) / 5;
	var lboxDefault = ($('.dolpic_warp .wrapper').width() - 12) / 2;
	var lboxWide = ($('.dolpic_warp .wrapper').width() - 12) / 3;
	if(window.innerHeight > window.innerWidth){
		$('.gbox').css({
			width: gboxDefault,
			height: gboxDefault
		});
		$('.dolpic_lbox').css({
			width: lboxDefault
		});
		$('.hot_box').removeClass('wide');
		$('.ad_wrap').removeClass('wide');
	} else {
		$('.gbox').css({
			width: gboxWide,
			height: gboxWide
		});
		$('.dolpic_lbox').css({
			width: lboxWide
		});
		$('.hot_box').addClass('wide');
		$('.ad_wrap').addClass('wide');
	}
    if($('.fbar').height() < 75) {
		$('.fbar_wrap').removeClass('more');
		$('.btn_more').hide();
	} else {
		$('.fbar_wrap').addClass('more');
		$('.btn_more').show();
	}
	$('.btn_more').live('click',function() {
		$('.fbar_wrap').removeClass('more');
		$('.btn_more').hide();
	});

	// 화면 전환시 새로고침
	var windowWidth = $(window).width();
	$(window).resize(function() {
		if(windowWidth != $(window).width()){
		location.reload();
		return;
		}
	});
});
</script>


<script type="text/javascript">
    var bExec = false;
    $(function () {

        var swipe = $('.gbox_gallery');
        // Swipes:
        swipe.swipeleft(function () {
            //location.href = "/Pics/Main/@((string.IsNullOrEmpty(ViewBag.HashTag) ? CommonVariable.ALL_IMAGE : ViewBag.HashTag))" + "/" + parseInt(parseInt($("#CurPage").val()) + 1);
        });
        swipe.swiperight(function () {
            if ($("#CurPage").val() == 1) return;
            //location.href = "/Pics/Main/@((string.IsNullOrEmpty(ViewBag.HashTag) ? CommonVariable.ALL_IMAGE : ViewBag.HashTag))" + "/" + parseInt(parseInt($("#CurPage").val()) - 1);
        });

        $('.gbox').live({
            mouseenter: function () { $('.gbox_thumb', this).fadeIn(300); $('.gbox_thumb', this).parent("div").addClass('transition'); },
            mouseleave: function () { $('.gbox_thumb', this).fadeOut(100); $('.gbox_thumb', this).parent("div").removeClass('transition'); }
        });
        $('.gbox').live('click', function () {
            location.href = '/Pics/PicView/' + $(this).attr("seq") + "/@((string.IsNullOrEmpty(ViewBag.HashTag) ? CommonVariable.ALL_IMAGE : ViewBag.HashTag))" + "/" + $("#CurPage").val();
        });
        $('.gbox_list li').live('click', function (event) {
            location.href = "/Pics/Main/@((string.IsNullOrEmpty(ViewBag.HashTag) ? CommonVariable.ALL_IMAGE : ViewBag.HashTag))" + "/" + $(this).attr("page");
            return;
            if (bExec) {
                alert("요청을 처리중입니다.잠시만 기다려주세요.");
                return;
            }

            bExec = true;

            $("#loading").show();
            $("#CurPage").val($(this).attr("page"));

            $.ajax({
                url: "/Pics/ImageList",
                type: "POST",
                dataType: "json",
                data: {
                    "CurPage": $(this).attr("page"),
                    "HashTag": "@ViewBag.HashTag"
                }
            })
            .done(function (data) {
                var retData = $.parseJSON(data);
                var imgList = retData.ImageList;

                $(".gbox").remove();
                $(".goto_list").remove();
                var div = "";

                for (var i = 0; i < imgList.length; i++) {
                    var sImgSrc = "";

                    if (imgList[i].TagUrlType == @((int)e_TagUrlType.twitter))
                    {
                        sImgSrc = imgList[i].ImageSrc + ":thumb";
                    }
                    else if (imgList[i].TagUrlType == @((int)e_TagUrlType.instagram))
                    {
                        sImgSrc = imgList[i].ImageSrc;
                    }

                    div = "<div seq='" + imgList[i].Seq + "' class='gbox' style='background:url(" + sImgSrc + ") center center no-repeat;background-size:cover'>";
                    div += "</div>";
                    $(".img_list").append(div);
                }

                div = "<div class='goto_list'>" + retData.PageGotoList + "</div>";
                $(".gbox_list").append(div);

                $('html,body').animate({ scrollTop: 0 }, 500);
            })
            .fail(function () {
                alert("실행중 에러가 발생했습니다.");
            })
            .always(function () {
                bExec = false;
                $("#loading").hide();
            });
        });
    });

</script>